.warp {
  padding: 30rpx;
  display: flex;
  padding-bottom: 130rpx;
}

.left {
  width: 160rpx;
  overflow: hidden;
  background: #f1f1f1;
}

.right {
  flex: 1;
  margin-left: 36rpx;
}

.left .menu {
  line-height: 88rpx;
  margin-left: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.left .active {
  border-left: #d5b075 8rpx solid;
  margin: 0;
}

.right .title {
  width: 100%;
  padding-bottom: 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #d5b075;
}

.right .list {
  width: 100%;
  margin-bottom: 42rpx;
  overflow: hidden;
  display: flex;
}

.right .list .pic {
  width: 158rpx;
  height: 158rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.right .list .content {
  flex: 1;
  margin-left: 34rpx;
}

.right .list .text {
  font-size: 28rpx;
  font-weight: bold;
  width: 100%;
  height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.right .list .info {
  width: 100%;
  overflow: hidden;
  line-clamp: 2;
  box-orient: vertical;
  text-overflow: ellipsis;
  font-size: 24rpx;
  padding-bottom: 10rpx;
  color: #999;
}

.right .list .bot {
  width: 100%;
  overflow: hidden;
  display: flex;
  justify-content: center;
}

.right .list .price {
  flex: 1;
  margin-right: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #d5b075;
}

.right .list .buy {
  width: 42rpx;
  height: 42rpx;
  overflow: hidden;
  background: #d5b075;
  border-radius: 21rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer {
  width: 100%;
  height: 100rpx;
  background: #d5b075;
  display: flex;
  justify-content: center;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
}

.footer .ok {
  width: 280rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  border-left: 3rpx #fff solid;
}

.footer .total {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer .total .car {
  margin-left: 60rpx;
  position: relative;
}

.footer .total .car .num {
  width: auto;
  height: 24rpx;
  line-height: 24rpx;
  padding-left: 6rpx;
  padding-right: 6rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 0;
  right: -10rpx;
  z-index: 20;
  background: #ee0a24;
}

.footer .total .price {
  flex: 1;
  margin-left: 34rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}

.footer .total .price .unt {
  font-size: 22rpx;
  font-weight: normal;
}

.carList {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 130rpx;
}

.carList .rows {
  width: 100%;
  overflow: hidden;
  display: flex;
  margin-bottom: 34rpx;
}

.carList .pic {
  width: 124rpx;
  height: 124rpx;
  overflow: hidden;
  border-radius: 10rpx;
}

.carList .content {
  flex: 1;
  margin-left: 20rpx;
}

.carList .text {
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  font-size: 28rpx;
}

.carList .bot {
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.carList .price {
  flex: 1;
  color: #d5b075;
  font-size: 28rpx;
  font-weight: bold;
}

.van-stepper__input--disabled {
  color: #333 !important;
}