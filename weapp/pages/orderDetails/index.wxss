page {
  background: #f1f1f2;
}

.list {
  margin: 30rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.list .title {
  padding-top: 20rpx;
  font-size: 32rpx;
}

.list .content {
  width: 100%;
  overflow: hidden;
  padding-top: 20rpx;
  line-height: 36rpx;
  font-size: 32rpx;
  color: #999;
}

.header {
  height: 260rpx;
  padding-left: 52rpx;
  line-height: 120rpx;
  font-size: 40rpx;
  color: #fff;
  z-index: 1;
  background: linear-gradient(to right, #cea461, #dbbb7f);
}

.info {
  margin: 30rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: -80rpx;
  z-index: 10;
}

.info .row {
  width: 100%;
  display: flex;
  align-items: center;
}

.info .price {
  flex: 1;
  font-size: 32rpx;
}

.info .price .un,
.info .price .text {
  font-size: 36rpx;
  color: #cb1b1b;
}

.info .price .un {
  font-size: 32rpx;
}

.info .button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 2px solid #eaeaea;
  border-radius: 10rpx;
  text-align: center;
  font-size: 32rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}