page {
  background: #f1f1f2;
}

.header {
  width: 100%;
  height: 280rpx;
  background: #d5b075;
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 42rpx;
  z-index: 1;
}

.header .pic {
  margin-left: 30rpx;
}

.header .name {
  font-size: 40rpx;
  margin-left: 30rpx;
}

.bigTit {
  font-size: 28rpx;
  color: #999;
  margin-top: 110rpx;
  margin-left: 60rpx;
  margin-bottom: 30rpx;
}

.warp {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.total {
  margin: -60rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  z-index: 2;
}

.total .item {
  flex: 1;
  text-align: center;
}

.total .item .text1 {
  font-size: 24rpx;
}

.total .item .text2 {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 30rpx;
}